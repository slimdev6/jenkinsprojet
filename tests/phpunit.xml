<phpunit>
    <testsuites>
        <testsuite name="My Test Suite">
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../www</directory>
        </whitelist>
    </filter>

<logging>
  <log type="coverage-clover" target="../../build/logs/coverage.xml"/>
</logging>
</phpunit>